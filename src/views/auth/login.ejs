<%- include('../port/layout-start', {title: title}) %> <%- include('../port/menu') %>

<div class="container">
  <h1><%= title %></h1>

  <div class="row">
    <div class="col-sm-6">
      <!-- Tabs navs -->
      <ul class="nav nav-tabs mb-3" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
          <a
            class="nav-link active"
            id="ex1-tab-1"
            data-mdb-toggle="tab"
            href="#ex1-tabs-1"
            role="tab"
            aria-controls="ex1-tabs-1"
            aria-selected="true"
            >Авторизация</a
          >
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link"
            id="ex1-tab-2"
            data-mdb-toggle="tab"
            href="#ex1-tabs-2"
            role="tab"
            aria-controls="ex1-tabs-2"
            aria-selected="false"
            >Регистрация</a
          >
        </li>
      </ul>
      <!-- Tabs navs -->
      <!-- Tabs content -->

      <div class="tab-content" id="ex1-content">
        <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
          <div id="login" class="col s6 offset-s3">
            <h1>Войти</h1>
            <form action="/api/user/login" method="post" novalidate>
              <div class="input-field">
                <input placeholder="Placeholder" id="email" name="email" type="email" class="validate" required />
                <label for="title">Email</label>
              </div>
              <div class="input-field">
                <input
                  placeholder="Placeholder"
                  id="password"
                  name="password"
                  type="password"
                  class="validate"
                  required
                  min="1"
                />
                <label for="price">Password</label>
              </div>

              <button type="submit" class="btn btn-primary">Войти</button>
            </form>
          </div>
        </div>
        <div class="tab-pane fade" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">
          <div id="register" class="col s6 offset-s3">
            <h1>Регистраци</h1>
            <form action="/api/user/signup" method="post" novalidate>
              <div class="input-field">
                <input placeholder="Placeholder" id="remail" name="remail" type="email" class="validate" required />
                <label for="title">Email</label>
                <span class="helper-text" data-error="Введите email" data-success="right"></span>
              </div>

              <div class="input-field">
                <input placeholder="Placeholder" id="rname" name="rname" type="text" class="validate" required />
                <label for="title">Name</label>
              </div>

              <div class="input-field">
                <input
                  placeholder="Placeholder"
                  id="rpassword"
                  name="rpassword"
                  type="password"
                  class="validate"
                  required
                  min="1"
                />
                <label for="price">Password</label>
              </div>

              <button type="submit" class="btn btn-primary">Зарегистрировать</button>
            </form>
          </div>
        </div>
      </div>
      <!-- Tabs content -->
    </div>
  </div>
</div>

<%- include('../port/layout-end') %>
